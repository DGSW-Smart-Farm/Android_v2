<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.hs.dgsw.smartfarm">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.activity.details.HumidityActivity"
            android:exported="true" />
        <activity
            android:name=".view.activity.details.FanActivity"
            android:exported="true" />
        <activity
            android:name=".view.activity.details.Co2Activity"
            android:exported="true" />
        <activity
            android:name=".view.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.details.TempDetailsActivity"
            android:exported="true" />
        <activity
            android:name=".view.activity.details.MoistureDetailsActivity"
            android:exported="true" />
        <activity
            android:name=".view.activity.details.LedDetailsActivity"
            android:exported="true" />
        <activity
            android:name=".view.activity.MainActivity"
            android:exported="true" />
    </application>

</manifest>